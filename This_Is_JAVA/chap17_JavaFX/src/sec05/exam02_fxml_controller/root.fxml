<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Button?>

<HBox xmlns:fx="http://javafx.com/fxml/1"
	prefWidth="200" prefHeight="50" alignment="CENTER" spacing="20" 
	fx:controller="sec05.exam02_fxml_controller.RootController">
	<!-- 컨트롤러는 fxml파일 하나당 하나씩! 
	fx:controller로 컨트롤러를 지정해주는것임.-->
	
	
	<children>
		<Button fx:id ="btn1" text = "버튼1" />
		<Button text = "버튼2" onAction = "#handleBtn2Action"/>
		<!-- FXML에서 직접 이벤트 처리를 한다면 id를 줄 필요도 없다.  -->
		<Button fx:id ="btn3" text = "버튼3" />
	</children>
</HBox>

