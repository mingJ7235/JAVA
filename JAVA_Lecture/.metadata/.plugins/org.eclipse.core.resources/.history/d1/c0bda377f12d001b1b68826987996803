package p1;

public class RemoteControlMain {
	public static void main(String[] args) {
		RemoteControl rc = null; //인터페이스를 참조변수로 사용하기 위하여 선언
		
		rc = new SmartTelevsion();
		rc.turnOn();
		rc.setVolume(7);
		rc.setMute(true);
		rc.turnOff();
		
		//search() 호출하기
		//down casting 하기
		SmartTelevsion sm = (SmartTelevsion) rc;
		sm.search("KBS");
	}
}
